# Transport-independent RPC
TIRPC=YES

# Use the system-provided PCRE library
undefine PCRE
PCRE_LIB=/usr/lib/x86_64-linux-gnu
PCRE_INCLUDE=/usr/include/
USE_PCRE=YES

# Path to the Open62541 C++ installation
OPEN62541=/opt/open62541
OPEN62541_DEPLOY_MODE = PROVIDED
OPEN62541_LIB_DIR = $(OPEN62541)/lib
OPEN62541_SHRLIB_DIR = $(OPEN62541_LIB_DIR)
OPEN62541_USE_CRYPTO = YES

# Build static libraries, but not static binaries
SHARED_LIBRARIES=YES
ENABLE_STATIC=NO
STATIC_BUILD=NO
